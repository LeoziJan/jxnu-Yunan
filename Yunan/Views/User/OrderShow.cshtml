@model Model.ViewModel.UserInfoViewModel
@{
    ViewBag.Title = "OrderShow";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="uchead">
    <div class="ucheadleft">
        <p>最新动态</p>
    </div>
    <div class="ucheadright">
        @Html.ActionLink("攻略", "Index", new { }, new { @class = "uca1" })
        @Html.ActionLink("订单", "OrderShow")      
    </div>
</div>

<div class="omain">
    <ul>
        @foreach (var item in Model.userOrder)
        {
            <li>
                <div class="omtop">
                    <p>订单号: @item.Oid</p>
                </div>
                <div class="omimg" style="background-image:url(../../@item.Simg)">                  
                </div>
                <div class="omsel">
                    <p>@item.Stitle</p>
                    <p>@item.punmber</p>
                    <p>@item.price</p>
                    <p>@Html.ActionLink("景区详细","ScenicDetail","Home",new {id= @item.Sid},new { })</p>
                </div>
                <div class="ombuttom">
                    <p class="omp1">@item.totlePrice</p>
                    <p>@Html.ActionLink("订单详细","OrderDetail","User",new {oid=@item.Oid },new { })</p>
                </div>
            </li>
        }
    </ul>
</div>



@section styles{
<link href="~/Content/User/css/userOrder.css" rel="stylesheet" />
<link href="~/Content/User/css/UserCenter.css" rel="stylesheet" />
    }
