@model Model.ViewModel.NewsDetailViewModel

<div class="ntmain">  
    @if (Model.untvm == null)
    {
        <p></p>
    }
    else
    {
        <ul>
            @foreach (var item in Model.untvm)
            {
                <li>
                    <div class="ntchild">
                        <img src="@item.userImg" class="ntimg" />
                        <p class="ntp1">@item.userName</p>
                        <p class="ntp2">举报</p>
                        <p class="ntp3">@item.TPostTime</p>
                        <div class="ntcontext">@item.TalkContent</div>
                    </div>
                </li>
            }
        </ul>
    }
    
</div>

